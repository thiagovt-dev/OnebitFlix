{
  "compilerOptions": {
    "jsx": "preserve",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ESNext",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "sourceMap": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "esm": true
  },
  "exclude": ["node_modules"],
  "include": ["public", "src", ".env", "uploads"]
}
